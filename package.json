{
  "name": "sandbars",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "rm -rf .next",
    "dev": "next dev",
    "dev:turbo": "next dev --turbopack",
    "dev:clean": "rm -rf .next node_modules/.cache && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:sources": "jest --testPathPattern='sources'",
    "test:integration": "jest --testPathPattern='integration'",
    "cron:stations": "curl -s http://localhost:3000/api/cron/sync-stations | jq",
    "cron:readings": "curl -s http://localhost:3000/api/cron/sync-readings | jq",
    "cron:grid": "curl -s http://localhost:3000/api/cron/compute-grid | jq",
    "cron:wavewatch": "curl -s http://localhost:3000/api/cron/sync-wavewatch | jq",
    "cron:all": "npm run cron:stations && npm run cron:wavewatch",
    "db:migrate": "echo 'Run the SQL in supabase/migrations/001_wave_grid.sql in your Supabase SQL editor'"
  },
  "dependencies": {
    "@deck.gl/aggregation-layers": "^9.2.6",
    "@deck.gl/core": "^9.2.6",
    "@deck.gl/layers": "^9.2.6",
    "@deck.gl/mapbox": "^9.2.6",
    "@sakitam-gis/maplibre-wind": "^2.0.3",
    "@supabase/ssr": "^0.5.1",
    "@supabase/supabase-js": "^2.95.3",
    "@turf/turf": "^7.3.3",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.4",
    "maplibre-gl": "^4.7.1",
    "next": "^15.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-map-gl": "^7.1.7",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.58.2",
    "@types/jest": "^30.0.0",
    "@types/maplibre-gl": "^1.13.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "^15.0.3",
    "jest": "^30.2.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5"
  }
}
